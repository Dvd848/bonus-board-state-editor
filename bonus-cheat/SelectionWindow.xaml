<Window x:Class="bonus_cheat.SelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="החלפת אות" Height="200" Width="300" FlowDirection="RightToLeft" ResizeMode="NoResize">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
        <Label Name="changeLetterLabel" Content="החלפת אות:" Width="176"/>
        <ComboBox x:Name="letterSelectionComboBox" Width="169" Margin="5"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Button Content="אישור" Width="80" Margin="5" Click="OkButton_Click"/>
            <Button Content="ביטול" Width="80" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
